{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ESNext",
        "jsx": "preserve",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}